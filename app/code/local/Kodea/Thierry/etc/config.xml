<config>
    <modules>
        <Kodea_Thierry>
            <version>1.0.0</version>
        </Kodea_Thierry>
    </modules>
    <frontend>
        <routers>
            <routeurcamarche>
                <use>standard</use>
                <args>
                    <module>Kodea_Thierry</module>
                    <frontName>jai</frontName>
                </args>
            </routeurcamarche>
        </routers>
        <layout>
            <updates>
                <kodea_thierry>
                    <file>kodea_thierry.xml</file>
                </kodea_thierry>
            </updates>
        </layout>
        <events>
            <catalog_product_type_prepare_full_options>
                <observers>
                    <Kodea_Thierry_Model_Observer>
                        <type>singleton</type>
                        <class>Kodea_Thierry/Observer</class>
                        <method>multiplieParDeuxQuantite</method>
                    </Kodea_Thierry_Model_Observer>
                </observers>
            </catalog_product_type_prepare_full_options>
<!--            <checkout_cart_product_add_after>
                <observers>
                    <Kodea_Thierry_Model_Observer>
                        <type>singleton</type>
                        <class>Kodea_Thierry/Observer</class>
                        <method>multiplieParDeuxQuantite</method>
                    </Kodea_Thierry_Model_Observer>
                </observers>
            </checkout_cart_product_add_after>-->
        </events>
    </frontend>
    <global>
        <models>
            <Kodea_Thierry><!-- ATTENTION AUX MAJUSCULES -->
                <class>Kodea_Thierry_Model</class>
            </Kodea_Thierry>
        </models>
        <blocks>
            <kodea_thierry><!-- ATTENTION AUX MINUSCULES -->
                <class>Kodea_Thierry_Block</class>
            </kodea_thierry>
        </blocks>
    </global>
</config>
